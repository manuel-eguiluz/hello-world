    {
      "type": "node",
      "request": "launch",
      "name": "Launch SLS Debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug:sls"],
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch SLS Debug Client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug:sls-client"],
      "port": 9230,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
